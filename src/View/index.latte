<!doctype html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
<form action="/index.php" method="POST">

    <p>Event SignUp <br><br>
        {if $logged_in === true}Username: {$_SESSION['username']}
        <a href='?page=logout'>Logout</a><br><br>
        {else} <a href="http://localhost:8000/?page=login">Login</a>
        <a href="http://localhost:8000/?page=register">Register</a>
        <p style='color:red'>Login if you want to join events</p>

    {/if}
    <label for="name">Event Name:</label>
    <input type="text" id="name" name="name" required>
    <br>

    <label for="date">Event Date:</label>
    <input type="date" name="date" required id="date">
    <br>

    <label for="desc">Event Description:</label>
    <textarea name="desc" rows="1" cols="30" required id="desc"></textarea>
    <br>

    <label for="maxpers">Maximum Number of People:</label>
    <input type="number" id="maxpers" name="maxpers" min="1" required>
    <br>

    <input type="submit" value="Submit" name="Event">

</form>

    {if $errors["nameerror"] === true}
    <p style='color:red'>Event Name should contain atleast 3 Characters</p>
    {/if}
    {if $errors["descerror"] === true}
    <p style='color:red'>Event Description should contain atleast 3 Characters</p>
    {/if}
    {if $errors["maxperserror"] === true}
    <p style='color:red'>Max Participants should atleast be 1</p>
    {/if}
    {if $errors["dateerror"] === true}
    <p style='color:red'>Event Date can't be in the Past</p>
    {/if}

{foreach $events as $event}
    {var $buttonid = $event['id']}
    {var $joinedevent = false}
    {var $joinedevent = false}
    <p>Event Name: {$event['name']}
        {foreach $event["joined_user_usernames"] as $users}
            {if $users === $_SESSION['username']}
                {var $joinedevent = true}
            {/if}
            {if $joinedevent === true}
                <------- You joined the Event!
            {else}
            {/if}
        {/foreach}

    </p>
    <p>Date: {$event['date']}</p>
    <p>Description: {$event['desc']}</p>
    <p>Joined/Max Participants: {$event['joined_pers']} / {$event['maxpers']}</p>
    {if $_SESSION["logged_in"] === true && $event['maxpers'] > $event['joined_pers']}
        {foreach $event["joined_user_usernames"] as $username}
            {if $username === $_SESSION["username"]}
                {var $joinedevent = true}
            {/if}
        {/foreach}
        {if $joinedevent === true}
            <a href="?leaveevent={$buttonid}">Leave</a>
        {else} <a href="?joinevent={$buttonid}">Join!</a>
        {/if}
    {/if}
    <br>
{/foreach}

</body>
</html>



